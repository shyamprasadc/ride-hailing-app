# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ride_hailing

# CORS
CORS_URL=http://localhost:3000

# JWT (optional - not used in minimal version)
ACCESS_TOKEN_VALIDITY_SEC=3600
REFRESH_TOKEN_VALIDITY_SEC=86400
TOKEN_ISSUER=ride-hailing-platform
TOKEN_AUDIENCE=ride-hailing-users
JWT_SECRET=your-secret-key-change-in-production

# Logging
LOG_DIR=./logs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# New Relic (optional - leave empty to disable)
NEW_RELIC_APP_NAME=ride-hailing-platform
NEW_RELIC_LICENSE_KEY=

# Fare Rates (per km)
FARE_RATE_ECONOMY=1.0
FARE_RATE_PREMIUM=2.0
